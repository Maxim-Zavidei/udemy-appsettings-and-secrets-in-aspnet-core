@inject Microsoft.Extensions.Configuration.IConfiguration configuration
@inject Microsoft.Extensions.Options.IOptions<SocialLoginOptions> socialLoginOptions

<div class="rob mb-2">
	<div class="col-md-6">
		<div class="card flex-md-row mb-4 box-shadow h-md-250">
			<div class="card-body d-flex flex-column align-items-start">
				<strong class="d-inline-block mb-2 text-primary">SendGrid</strong>
				<div class="mb-1 text-muted">@ViewBag.SendGridKey</div>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="card flex-md-row mb-4 box-shadow h-md-250">
			<div class="card-body d-flex flex-column align-items-start">
				<strong class="d-inline-block mb-2 text-primary">Assignment1</strong>
				<div class="mb-1 text-muted">@ViewBag.Assignment1Method1</div>
				<div class="mb-1 text-muted">@ViewBag.Assignment1Method2</div>
				<div class="mb-1 text-muted">@ViewBag.Assignment1Method3</div>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="card flex-md-row mb-4 box-shadow h-md-250">
			<div class="card-body d-flex flex-column align-items-start">
				<strong class="d-inline-block mb-2 text-primary">Twilio from controller</strong>
				<div class="mb-1 text-muted">@ViewBag.TwilioAuthToken</div>
				<div class="mb-1 text-muted">@ViewBag.TwilioAccountSid</div>
				<div class="mb-1 text-muted">@ViewBag.TwilioPhoneNumber</div>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="card flex-md-row mb-4 box-shadow h-md-250">
			<div class="card-body d-flex flex-column align-items-start">
				<strong class="d-inline-block mb-2 text-primary">Twilio injected to view</strong>
				<div class="mb-1 text-muted">@configuration.GetSection("Twilio:AuthToken").Value</div>
				<div class="mb-1 text-muted">@configuration.GetSection("Twilio:AccountSid").Value</div>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="card flex-md-row mb-4 box-shadow h-md-250">
			<div class="card-body d-flex flex-column align-items-start">
				<strong class="d-inline-block mb-2 text-primary">Social login</strong>
				<div class="mb-1 text-muted">@ViewBag.FacebookKey</div>
				<div class="mb-1 text-muted">@socialLoginOptions.Value.GoogleSettings.Key</div>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="card flex-md-row mb-4 box-shadow h-md-250">
			<div class="card-body d-flex flex-column align-items-start">
				<strong class="d-inline-block mb-2 text-primary">Connection String</strong>
				<div class="mb-1 text-muted">@ViewBag.ConnectionString</div>
			</div>
		</div>
	</div>
</div>
